<div class="row table--filter-bar-container hide">
  <div class="col-sm-12 table--filter-bar">
    <div class="filter-bar--info">
      <div class="filter-bar--selected">
        <h5 class="white">
          1 <%= users ? "filter" : "result" %> selected
        </h5>
      </div>
      <div class="filter-bar--seperator">
        <h5 class="white">|</h5>
      </div>
      <div class="filter-bar--clear">
        <h5 class="white">
          <%= users ? "Clear filters" : "Clear selection" %>
        </h5>
      </div>
      <% if !users && current_admin_user.permission?(:edit, @current_table, @database.id) %>
        <div class="filter-bar--seperator">
          <h5 class="white">|</h5>
        </div>
        <div class="filter-bar--edit">
          <h5 class="white">
            Edit selection
          </h5>
        </div>
      <% end %>
      <% if !users && current_admin_user.permission?(:delete, @current_table, @database.id) %>
        <div class="filter-bar--seperator">
          <h5 class="white">|</h5>
        </div>
        <div class="filter-bar--delete">
          <h5 class="white">
            Delete selection
          </h5>
        </div>
      <% end %>
    </div>
  </div>
</div>