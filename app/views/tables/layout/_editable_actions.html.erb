<div class="editable-toggle">
  <a href="" onclick="showEditable(event);">
    <i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit
  </a>
</div>

<div class="editable-actions-wrapper">
  <a href="" class="btn btn-default" onclick="cancelEditable(event);">
    cancel
  </a>
  <a href="" class="btn btn-primary" onclick="updateTableField(event, '<%= v["table"] %>', '<%= v["title"] %>', '<%= params[:record_id] %>');">
    update field
  </a>
</div>
