<div class="table--settings-modal hide">
  <div class="modal--container">
    <div class="modal--content-container">
      <div class="modal--header">
        <div class="row">
          <div class="col-sm-10">
            <h3><%= @table.humanize %></h3>
          </div>
          <div class="col-sm-2">
            <div class="modal--close-btn">
              <img src="/assets/images/icons/close.png">
            </div>
          </div>
        </div>
      </div>
      <div class="modal--content">
        <div class="row">
            <div class="col-sm-12">
              <h4>GENERAL</h4>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-8">
              <h4>Nested table</h4>
              <p>See the data of a related table inline with this table</p>
            </div>
            <div class="col-sm-4">
              <div class="table--settings-dropdown">
                <div class="form-control dropdown">
                  <% if @related_tables.empty? %>
                    <%= select_tag "dropdown", options_for_select(["N/A"], "N/A"), {class: "table--settings-nested-select", disabled: true} %>
                  <% else %>
                    <%= select_tag "dropdown", options_for_select(@related_tables, @table_settings.nested_table), {class: "table--settings-nested-select", "data-table" => @table, "data-setting" => "nested_table"} %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-8">
              <h4>Create entry</h4>
              <p>Allow users who have permission to create an entry</p>
            </div>
            <div class="col-sm-4">
              <div class="table--settings-dropdown">
                <div class="form-control dropdown">
                  <%= select_tag "dropdown", options_for_select([ "Database", "API" ], @table_settings.create_destination), {class: "table--settings-create-select", "data-table" => @table, "data-setting" => "create_destination"} %>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-8">
              <h4>Delete entry</h4>
              <p>Allow users who have permission to delete an entry</p>
            </div>
            <div class="col-sm-4">
              <div class="table--settings-dropdown">
                <div class="form-control dropdown">
                  <%= select_tag "dropdown", options_for_select([ "Database", "API" ], @table_settings.delete_destination), {class: "table--settings-delete-select", "data-table" => @table, "data-setting" => "delete_destination"} %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>