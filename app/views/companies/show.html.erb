<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-xs-3 col-sm-2 col-lg-1">
    <img alt="image" class="img-circle" src="/assets/a8-19ef84b7d694fe0b264a03cf5237e837311e869c0e3779e50e976339749844bb.jpg" style="margin-top: 10px; width: 100%">
  </div>

  <div class="col-xs-9 col-sm-10 col-lg-7">
    <h2><%= @company.name %></h2>

    <p>London, UK</p>
  </div>

  <div class="col-xs-12 col-sm-12 col-lg-4">
    <form style="margin-top: 20px" class="">
      <div class="row">
        <div class="col-lg-4">
          <label class="form-control">Status</label>
        </div>

        <div class="col-lg-8">
          <select class="form-control" name="">
            <option value="">Active</option>
          </select>
        </div>
      </div>
    </form>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <%= render 'profile_summary' %>
    </div>

    <div class="col-lg-6">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Activity history</h5>
        </div>

        <div class="ibox-content">
          <%= render 'shared/activity_history', feedable_type: "company", feedable_id: params[:id] %>
        </div>
      </div>
    </div>

    <div class="col-lg-6">
      <%= render 'users_table' %>

      <%= render 'zendesk_table' %>
    </div>
  </div>
</div>
