<div class="ibox margin-bottom" id="registration-step-1">
  <div class="ibox-content">
    <div class="text-center">
      <div class="logo-wrapper">
        <img src="/assets/logos/MissionKontrol-logo-original.png" alt="">
      </div>
    </div>

    <div class="m-t-lg">
      <p>Please enter credentials below to create an administrator user.</p>
      <p>Don't worry you can always change these settings later.</p>
    </div>

      <div class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
      </div>

      <div class="form-group" id="password-mismatch">
        <p class="alert-password">Password do not match</p>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum, and must include at least one capital and one special character)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="actions">
        <div class="align-right">
          <%= f.submit "Submit", class: "btn btn-primary m-b pull-right" %>
        </div>
      </div>

    <%# render 'form_content_admin_db', f: f %>

    <%= f.hidden_field(:active, value: true) %>
  </div>
</div>