<!DOCTYPE html>
<html>

  <head>
    <title>MissionKontrol</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <%= tag :meta, name: :psj, action: action_name, controller: controller_name %>
    <%= favicon_link_tag 'favicon.ico' %>
  </head>

  <body class="gray-bg">
    <div class="top-nav">
      <div class='col-sm-12'>
        <%= render 'layouts/layout_builder_topnavbar' %>
      </div>
    </div>

    <div>
      <div class="col-sm-5 col-md-4 col-lg-3 side-nav">
        <%= render 'layouts/layout_builder_navigation' %>
      </div>

      <div class="layout-builder--content">
        <div class="col-sm-7 col-md-8 col-lg-9">
          <%= render 'shared/flash_message' %>

          <%= yield %>

          <% render 'layouts/footer' %>
        </div>
      </div>
    </div>

    <div id="natterly-container"></div>

    <%= render 'layouts/natterly' %>
  </body>
</html>
