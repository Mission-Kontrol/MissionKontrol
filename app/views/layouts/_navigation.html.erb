<nav class="navbar-default navbar-static-side " role="navigation">
  <div class="sidebar-collapse">
    <ul class="nav metismenu" id="side-menu">
      <li class="nav-header ">
        <div class="dropdown profile-element">
          <%= link_to dashboard_path, :class => 'navbar-link left-layout-link' do %>
            <span>
              <img alt="image" class="" src="<%= image_url '/assets/images/Kuwinda_logo_full-blue-260.png' %>" style="width: 100px"/>
            </span>

            <a>
              <span class="clear">
                <span class="block m-t-xs">
                  <% if current_admin_user %>
                    <strong class="font-bold"><%= current_admin_user.full_name %></strong>
                  <% end %>
                </span>

                <% if demo_app %>
                  <span class="text-muted text-xs block">Demo</span>
                <% end %>
              </span>
            </a>
          <% end %>
        </div>

        <div class="logo-element">
          <img src="/assets/logos/kuwinda_thumbnail.png" alt="" class="thumbnail">
        </div>
      </li>

      <li class="<%= active_controller?('dashboard') || active_controller?('show')%>">
        <%= link_to dashboard_path do %>
          <span class="nav-label dashboard-nav-link" data-i18n="nav.layouts">Dashboard</span>
        <% end %>
      </li>

      <li class="<%= active_controller?('tables') && active_action?('show') %>">
        <a href="" id="nav-link-for-tables">
          <span class="nav-label" data-i18n="nav.dashboard">Tables</span> <span class="fa arrow"></span>
        </a>

        <ul class="nav nav-second-level collapse">
          <% @available_tables&.each do |t| %>
            <li class="">
              <% if current_admin_user.permission?(:view, t) %>
                <%= link_to t.humanize, table_path(table: t, id: t.downcase), id: "nav-link-for-#{t.downcase}-table" %>
              <% end %>
            </li>
          <% end %>
        </ul>
      </li>

      <% if Rails.env.development? || Rails.env.staging? %>
        <li class="<%= active_controller?('task_queues') %> hide">
          <%= link_to task_queues_path do %>
            <i class="fa fa-list" aria-hidden="true"></i>
            <span class="nav-label" data-i18n="nav.queues">Task Queues</span> <span class="fa arrow"></span>
          <% end %>

          <ul class="nav nav-second-level collapse">
            <li>
              <%= link_to "Create Task Queue", task_queues_path %>
            </li>

            <% if @task_queues.present? %>
              <li>
                <a href="#" class="divider"></a>
              </li>
            <% end %>

            <% @task_queues&.each do |q| %>
              <li class="">
                <%= link_to q.name, edit_task_queue_path(q) %>
              </li>
            <% end %>
          </ul>
        </li>
      <% end %>

      <li class="<%= active_controller?('layout_builder') %> hide">
        <%= link_to layouts_path do %>
          <span class="nav-label" data-i18n="nav.layouts">Layouts</span>
        <% end %>
      </li>

      <li class="<%= active_controller?('organisation_settings') || active_controller?('edit') || active_controller?('admin_users') %> || <%= active_controller?('permissions') %>">
        <a href="" id="nav-link-for-tables">
          <span class="nav-label" data-i18n="nav.layouts">Settings</span> <span class="fa arrow"></span>
        </a>

        <ul class="nav nav-second-level collapse">
          <li class="">
            <%= link_to edit_organisation_setting_path(current_organisation), id: "nav-link-for-general-settings" do %>
              <%= image_tag('/assets/images/icons/settings-1.png') %>  General
            <% end %>
          </li>
          <li class="<%= active_controller?('admin_users') %>">
            <%= link_to admin_users_path, id: "nav-link-for-user-settings" do %>
              <%= image_tag('/assets/images/icons/group-3.png') %>  Users
            <% end %>
          </li>
          <li class="<%= active_controller?('permissions') %>">
            <%= link_to permissions_path, id: "nav-link-for-user-settings" do %>
              <%= image_tag('/assets/images/icons/database-1.png') %>  Permissions
            <% end %>
          </li>
        </ul>
      </li>
    </ul>
  </div>
</nav>
