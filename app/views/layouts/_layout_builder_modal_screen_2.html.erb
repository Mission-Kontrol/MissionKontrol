<div id="screen-2" class="hide">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title" id="exampleModalLabel">Bring your new layout to life</h4>
    </div>

    <div class="modal-body">
      <div class="form-group">
        <label for="">Give it a name.</label>
        <input type="text" name="" value="" class="form-control">
      </div>

      <div class="form-group">
        <label for="">Primary table.</label>
        <p>Select the primary table that this layout will be based on.</p>
        <%= select_tag 'layout_builder_name',
                        options_for_select(@available_tables, selected: @layout_setting.primary_table),
                        prompt: "Select a table",
                        class: 'form-control table-select'
                        %>
      </div>
    </div>

    <div class="modal-footer">
      <a class="btn btn-default" id="layout-builder-modal-back-button">Back</a>
      <a class="btn btn-default" data-dismiss="modal">Next</a>
    </div>
  </div>
</div>
