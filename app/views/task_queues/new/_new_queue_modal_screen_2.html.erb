<div id="new-queue-modal-screen-2" class="">
  <div class="modal-content">
    <div class="modal-header">
      <h4 class="modal-title">Bring your new queue to life</h4>
    </div>

    <div class="modal-body">
      <%= form_for(@task_queue) do |f| %>
        <div class="form-group">
          <p>
            <b>Give it a name</b>
          </p>
          <%= f.text_field :name, class: "form-control", placeholder: 'e.g. Customers likely to churn' %>
        </div>

        <div class="form-group">
          <p>
            <b>Select a primary table</b>
          </p>
          <%= f.select :table,
                        options_for_select(@available_tables, selected: @task_queue.table),
                        {prompt: "Select a table"},
                        {:class => 'form-control' }%>
        </div>

        <div class="form-group">
          <p>
            <b>Enter details of the task</b>
          </p>
          <%= f.text_area :details, class: "form-control", placeholder: 'e.g. Call customers who have not logged in within the last 30 days.' %>
        </div>

        <div class="form-group task_queue_modal_submit">
          <%= f.hidden_field :database_id, value: @database.id %>
          <%# <a class="btn btn-default" id="queue-builder-modal-back-button"></a> %>
          <%= f.submit  class: "btn btn-primary pull-right" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
