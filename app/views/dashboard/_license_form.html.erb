<%= form_tag("/license/verify", method: "post") do %>
  <div class="form-group">
    <%= label_tag(:q, "Activation ID:") %>
    <%= text_field_tag(:activation_id, '', {class: 'form-control'}) %>
  </div>

  <div class="form-group">
    <%= label_tag(:q, "License key:") %>
    <%= text_field_tag(:license_key, '', {class: 'form-control'}) %>
  </div>

  <%= submit_tag("Submit", {class: 'btn btn-primary'}) %>
<% end %>
