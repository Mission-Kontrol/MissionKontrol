<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-4">
    <h2>View configuration</h2>
  </div>
  <div class="col-sm-2 pull-right">
    <% if @view_builder %>
      <button type="button" class="btn btn-<%= @view_builder.status %>"><%= @view_builder.status.capitalize %></button>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <div class="wrapper wrapper-content border-bottom border-top white-bg">
      <div class="form-group row">
        <div class="col-sm-10">
          <%= text_field_tag "View name", nil, placeholder: "Provide a name for your view...", class: "form-control m-b" %>
        </div>
        <div class="col-sm-10">
          <%= select_tag "Select table", options_for_select(@available_tables), prompt: 'Select a table', class: "form-control m-b select2" %>
        </div>

        <div class="col-sm-10">
          <div id="fieldSelect"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
