<div class="row wrapper wrapper-content border-bottom white-bg">
  <div class="row">
    <div class="col-sm-2 pull-right">
      <label>Default number of rows</label>
      <%= select_tag "default_rows", options_for_select(2..50), class: "form-control m-b select2", id: "defaultRows" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <table id="tableOrderConfiguration" class="footable table" data-page-size="8" data-filter="#filter" data-view-builder="<%= @view_builder.id %>">
        <thead>
          <tr>
            <th>Field Name</th>
          </tr>
        </thead>
        <tbody class='sortable'>
          <% @view_builder.table_attributes['visible_fields'].each do |key, value| %>
            <tr class="fields_<%= key %>">
              <td class="tableField"><%= value %></td>
              <!-- <td class="tablePosition"><%= key.to_i + 1 %></td> -->
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-sm-2">
      <button type='button' class='btn btn-block btn-primary margin-top-20' id='updateFieldConfiguration'>Next</button>
    </div>
  </div>
</div>
