<style media="screen">
  .bootstrap-duallistbox-container.row {
    margin: 0;
  }
</style>

<%= form_for @layout_setting, remote: true do |form| %>
  <div class="form-group">
    <%= form.hidden_field :layout_id, value: params[:id] %>
  </div>

  <div class="form-group">
    <strong>Fields</strong>
    <p>Select the fields that will be visible for this layout.</p>





    <%= select_tag 'layout_setting[visible_columns][]',
                    '',
                    multiple: true,
                    include_blank: false,
                    prompt: "",
                    data: { columns: @layout_setting.visible_columns.to_json },
                    id: "layout_setting_visible_columns" %>
  </div>

  <div class="actions" style="text-align: right">
    <%= form.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
